---
import "../styles/global.css";

import HeaderConsult from "../components/navigation/HeaderConsult/HeaderConsult.svelte";
import FloatingPanel from "../components/navigation/FloatingPanel/FloatingPanel.svelte";
import FloatingPanelContent from "../components/navigation/FloatingPanelContent/FloatingPanelContent.svelte";

import { fetchBackendApi } from "../global/api";
import { getApiConsultationUrl, Routes, Suffixes } from "../global/routes";
import type { AstroGlobalRuntime, Consultation } from "../global/types";
import { getLangfuseUrl } from "../global/utils";

function isConsultationSubUrl(url: string): boolean {
  const consultationUrlRe = /\/consultations\/.*\S.*/;
  return consultationUrlRe.test(url);
}
function isThemeSignOffUrl(url: string): boolean {
  return url.includes(Suffixes.ThemeSignOff);
}
function isEvaluationsUrl(url: string): boolean {
  return url.startsWith(Routes.Evaluations);
}
function isDashboardUrl(url: string): boolean {
  if (url === Routes.Consultations) {
    return false;
  }
  return (
    url.includes(Suffixes.Consultations) && !url.includes(Suffixes.ThemeSignOff)
  );
}
function getPathText(url: string, consultation?: Consultation): string[] {
  const parts = [];

  if (consultation) {
    parts.push(consultation.title);
  }

  if (isThemeSignOffUrl(url)) {
    parts.push("Theme Sign Off");
  } else if (isDashboardUrl(url)) {
    parts.push("Dashboard");
  } else if (isEvaluationsUrl(url)) {
    parts.push("Evaluations");
  }
  return parts;
}

const { pathname } = (Astro as unknown as AstroGlobalRuntime).url;
const { consultationId } = (Astro as unknown as AstroGlobalRuntime).params;

let isStaff: boolean = false;
let email: string | unknown = null;
let consultation: Consultation | undefined;
let showProcess: boolean = isConsultationSubUrl(pathname);
try {
  const data = await fetchBackendApi<{ is_staff: boolean; email: string }>(
    Astro,
    Routes.ApiUser,
  );
  isStaff = data.is_staff;
  email = data.email;
  console.log(`user ${email} signed in`);
} catch (e) {
  console.log("user not signed in", e);
}

if (consultationId) {
  try {
    consultation = await fetchBackendApi<Consultation>(
      Astro,
      getApiConsultationUrl(consultationId),
    );
  } catch {
    console.log("failed to retrieve consultation data");
  }
}

// Get langfuse URL server-side so it's available at runtime in ECS
const langfuseUrl = getLangfuseUrl();
---

<!doctype html>
<html lang="en" class="scroll-p-8 scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
    <title>Consult</title>

    <script is:inline src="/lit/index.js"></script>
  </head>
  <body>
    <div class="mx-auto flex h-full max-w-screen-3xl flex-col">
      <HeaderConsult
        client:load
        isStaff={isStaff}
        isSignedIn={Boolean(email)}
        path={getPathText(pathname, consultation)}
        showProcess={showProcess}
        consultationId={consultationId}
        consultationStage={consultation?.stage}
        langfuseUrl={langfuseUrl}
      />

      <main class="grow">
        <slot />
      </main>

      <div class="fixed bottom-0 right-0 m-4">
        <FloatingPanel client:load>
          <FloatingPanelContent client:load />
        </FloatingPanel>
      </div>
    </div>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
