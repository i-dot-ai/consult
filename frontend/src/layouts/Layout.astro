---
import "../styles/global.css";
import Header from "../components/Header/Header.svelte";
import Footer from "../components/Footer/Footer.svelte";
import { fetchBackendApi } from "../global/api";

let isStaff: boolean = false;
let isSignedIn: boolean = false;

try {
  const data = await fetchBackendApi<{ is_staff: boolean }>(
    Astro,
    "/api/user/",
  );
  isStaff = data.is_staff;
} catch {
  console.log("user not signed in");
}
---

<!doctype html>
<html lang="en" class="scroll-smooth scroll-p-8">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
    <title>Consult</title>

    <script is:inline src="/lit/index.js"></script>
  </head>
  <body>
    <div class="flex flex-col h-full max-w-screen-3xl mx-auto">
      <Header client:load isSignedIn={isSignedIn} isStaff={isStaff} />

      <main class="grow">
        <slot />
      </main>

      <Footer />
    </div>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
