---
import Layout from '../layouts/Layout.astro';
import Section from '../components/Section.svelte';
import Title from '../components/Title.svelte';
import SignInForm from '../components/SignInForm.svelte';

import { getBackendUrl } from '../global/utils';

const backendUrl = getBackendUrl(Astro.request.url);
---
<Layout>
	<Section>
		<Title level={1} text="Sign in" />

        <p class="my-4 text-md text-gray-500">
            Enter your email address to generate a link to sign in
        </p>

        <SignInForm client:load backendUrl={backendUrl} />
	</Section>
</Layout>
