---
import { clsx } from "clsx";

import { Routes } from "../global/routes.ts";

import Layout from "../layouts/Layout.astro";
import Section from "../components/Section/Section.svelte";
import ShareIcon from "../components/svg/ShareIcon.svelte";
import UploadIcon from "../components/svg/UploadIcon.svelte";
import ThemesIcon from "../components/svg/ThemesIcon.svelte";
import ViewIcon from "../components/svg/ViewIcon.svelte";
import ExperienceIcon from "../components/svg/ExperienceIcon.svelte";

const listItemClasses = clsx(["flex", "items-center", "gap-6"]);
const h3Classes = clsx(["text-xl", "font-bold", "mb-1"]);
---

<Layout>
  <section class="bg-primary text-white">
    <div class={clsx(["px-10", "py-12", "md:pl-[120px]", "lg:w-2/3"])}>
      <h1 class={clsx(["text-4xl", "md:text-5xl", "font-bold", "mb-8"])}>
        Use machine learning to help you understand consultation responses
      </h1>
      <p class={clsx(["text-xl", "md:text-2xl", "mb-8"])}>
        Work with i.AI to use the prototype Consult to see how it could work for
        your consultation.
      </p>
      <a
        href="/get-involved"
        class={clsx([
          "inline-flex",
          "items-center",
          "gap-2",
          "bg-white",
          "text-primary",
          "font-bold",
          "rounded",
          "px-8",
          "py-4",
          "text-lg",
          "shadow",
          "hover:bg-primary",
          "hover:text-white",
          "border-2",
          "border-white",
          "transition-colors",
          "duration-200",
        ])}
      >
        Get involved
        <svg
          class="ml-2 h-6 w-6"
          xmlns="http://www.w3.org/2000/svg"
          width="17.5"
          height="19"
          viewBox="0 0 33 40"
          aria-hidden="true"
          focusable="false"
        >
          <path fill="currentColor" d="M0 0h13l20 20-20 20H0l20-20z"></path>
        </svg>
      </a>
    </div>
  </section>

  <Section>
    <h2 class={clsx(["text-3xl", "font-bold", "text-neutral-700", "my-5"])}>
      How the process works
    </h2>

    <ul class={clsx(["space-y-8", "mb-6", "text-neutral-700"])}>
      <li class={listItemClasses}>
        <ShareIcon />
        <div>
          <h3 class={h3Classes}>Agree to share your data</h3>
          <p class="text-lg">
            Before you can use our tool you need to agree to <a
              href="/data-sharing"
              class="hover:text-primary/80 text-primary underline"
              >data sharing</a
            >.
          </p>
        </div>
      </li>

      <li class={listItemClasses}>
        <UploadIcon />
        <div>
          <h3 class={h3Classes}>Upload your data</h3>
          <p class="text-lg">
            You will be given a log in to securely upload your data to the tool.
          </p>
        </div>
      </li>

      <li class={listItemClasses}>
        <ThemesIcon />
        <div>
          <h3 class={h3Classes}>Themes are created</h3>
          <p class="text-lg">
            We run a process to create the themes. Find out <a
              href={Routes.HowItWorks}
              class="hover:text-primary/80 text-primary underline"
              >how it works</a
            >.
          </p>
        </div>
      </li>

      <li class={listItemClasses}>
        <ViewIcon />
        <div>
          <h3 class={h3Classes}>View the themes</h3>
          <p class="text-lg">
            Sign in to view the themes and explore responses in each theme.
          </p>
        </div>
      </li>

      <li class={listItemClasses}>
        <ExperienceIcon />
        <div>
          <h3 class={h3Classes}>Share your experience with i.AI</h3>
          <p class="text-lg">
            This tool is a prototype so to access it you need to agree to user
            research.
          </p>
        </div>
      </li>
    </ul>
  </Section>
</Layout>
