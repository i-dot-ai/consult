---
import { fetchBackendApi } from "../../../global/api";
import type {
  AstroGlobalRuntime,
  ConsultationResponse,
  User,
} from "../../../global/types";

import Layout from "../../../layouts/Layout.astro";
import Section from "../../../components/Section/Section.svelte";
import Link from "../../../components/Link.svelte";
import Title from "../../../components/Title.svelte";
import Button from "../../../components/inputs/Button/Button.svelte";
import EditUser from "../../../components/screens/EditUserForm/EditUser.svelte";
import {
  getApiUserConsultations,
  getApiUserDetails,
} from "../../../global/routes";
import { Routes } from "../../../global/routes";

const { userId } = (Astro as unknown as AstroGlobalRuntime).params;

if (!userId) {
  return (Astro as unknown as AstroGlobalRuntime).redirect(Routes.SupportUsers);
}

// Fetch current logged-in user
const currentUser = await fetchBackendApi<User>(Astro, Routes.ApiUser);

// Fetch the user being viewed
const viewedUser = await fetchBackendApi<User>(
  Astro,
  getApiUserDetails(userId),
);

// Fetch all consultations for this user
const consultationsData = await fetchBackendApi<ConsultationResponse[]>(
  Astro,
  getApiUserConsultations(userId),
);

// Check if viewing own profile
const isOwnProfile = currentUser.id === viewedUser.id;
---

<Layout>
  <Section>
    <!-- User Permissions -->
    <EditUser client:load userId={userId} />

    <!-- Delete User Section (only show if not viewing own profile) -->
    {
      !isOwnProfile && (
        <div class="mt-8 border-t pt-8">
          <Title level={2} text="Delete User" />
          <p class="mb-4 text-gray-600">
            This action cannot be undone. The user will be permanently removed.
          </p>
          <a href={`/support/users/${userId}/delete`}>
            <Button variant="primary">Delete user</Button>
          </a>
        </div>
      )
    }

    <!-- Consultations Section -->
    <div class="mt-8 border-t pt-8">
      <Title level={2} text="Consultations" />

      {
        consultationsData.length > 0 ? (
          <div class="overflow-x-auto">
            <table class="w-full text-left">
              <thead class="border-b font-bold">
                <tr>
                  <th class="py-3 pr-4">Consultation name</th>
                  <th class="py-3">Links</th>
                </tr>
              </thead>
              <tbody>
                {consultationsData.map((consultation) => (
                  <tr class="border-b hover:bg-gray-50">
                    <td class="py-3 pr-4">{consultation.title}</td>
                    <td class="space-y-1 py-3">
                      <div>
                        <Link
                          href={`/support/consultations/${consultation.id}`}
                        >
                          View in support
                        </Link>
                      </div>
                      <div>
                        <Link href={`/consultations/${consultation.id}`}>
                          View on frontend
                        </Link>
                      </div>
                    </td>
                  </tr>
                ))}
              </tbody>
            </table>
          </div>
        ) : (
          <p class="text-gray-600">
            This user is not associated with any consultations
          </p>
        )
      }
    </div>
  </Section>
</Layout>
